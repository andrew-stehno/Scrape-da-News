{{#each articles}}
<div class="card mb-5" style="width: 18rem;">
    <img src="{{this.image}}" class="card-img-top" alt="{{this.imageAlt}}">
    <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.summary}}</p>
        <a href="{{this.link}}" target="_blank">Read the article here!</a>
        <a href="#" class="btn btn-danger">Add a note</a>
    </div>
</div>
{{/each}}